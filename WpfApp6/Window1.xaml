<Window x:Class="WpfApp6.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="Window1" Height="300" Width="420">
    <Grid>
        <Grid>
            <StackPanel HorizontalAlignment="Center" Margin="0,10">
                <TextBlock FontSize="18">Выберите арифметическую операцию</TextBlock>
                <ComboBox Name="Box" FontSize="18"></ComboBox>
                
                <StackPanel Orientation="Horizontal" Margin="15" HorizontalAlignment="Center">
                    <TextBox Name="First" FontSize="18" Width="80"></TextBox>
                    <TextBlock x:Name="Znach" FontSize="18" Width="80"></TextBlock>
                    <TextBox Name="Second" FontSize="18" Width="80"></TextBox>
                </StackPanel>

                <Button Name="BtnCount" FontSize="18" Click="BtnCount_Click">Вычислить</Button>
                <GroupBox Header="Результат:" FontSize="18">
                    <TextBox FontSize="18"></TextBox>
                </GroupBox>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
